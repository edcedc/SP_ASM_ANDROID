<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/asset_remark_status"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/status"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gallery_circle"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/photo"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/gallery"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.csl.ams.View.SquareImageView
                    android:id="@+id/photo_1"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:maxWidth="100dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.csl.ams.View.SquareImageView
                    android:id="@+id/photo_2"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:maxWidth="100dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/add"
                    android:maxWidth="100dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <com.csl.ams.View.SquareImageView
                        android:id="@+id/dummy"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.csl.ams.View.SquareImageView
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="50sp"
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <com.csl.ams.View.SquareImageView
                    android:id="@+id/dummy_1"
                    android:visibility="invisible"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/black"
                    android:maxWidth="100dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.csl.ams.View.SquareImageView
                    android:id="@+id/dummy_2"
                    android:visibility="invisible"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/black"
                    android:maxWidth="100dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/image_wrapper"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--
            <include
                layout="@layout/image_row" />-->
        </LinearLayout>


        <LinearLayout
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/remark"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/remark_input"
                android:inputType="text|textMultiLine"
                android:gravity="top"
                android:lines="5"
                android:maxLines="5"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="130dp"/>
        </LinearLayout>

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/remark_save"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/save"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>