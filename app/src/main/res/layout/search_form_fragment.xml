<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ams_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/assetno"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/asset_no"
                    android:padding="5dp"
                    android:background="@android:color/white"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:background="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/assetname"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/asset_name"
                    android:padding="5dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@android:color/white"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sp_display"
                android:background="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/category"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

                <EditText
                    android:visibility="invisible"
                    android:padding="5dp"
                    android:background="@android:color/white"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/original_category"
                android:gravity="center"
                android:background="@android:color/white"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <!--
                <EditText
                    android:id="@+id/category"
                    android:padding="5dp"
                    android:background="@android:color/white"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>-->

                <Spinner
                    android:id="@+id/category_spinner1"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/category_spinner2"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/category_spinner3"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <View
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#C9CACA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:visibility="gone"
                    android:background="#C9CACA"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/sp_category"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:background="#C9CACA"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#C9CACA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:background="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/brand"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:id="@+id/brand"
                    android:padding="5dp"
                    android:background="@android:color/white"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:background="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/model"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:id="@+id/model"
                    android:padding="5dp"
                    android:background="@android:color/white"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:background="@android:color/white"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/location"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:visibility="gone"
                    android:background="@android:color/darker_gray"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <!--
                <EditText
                    android:id="@+id/location"
                    android:padding="5dp"
                    android:background="@android:color/white"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>-->
                <Spinner
                    android:id="@+id/location_spinner"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <View
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#C9CACA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:visibility="gone"
                    android:background="#C9CACA"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/sp_location"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:background="#C9CACA"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#C9CACA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="5dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/search"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:text="@string/search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>